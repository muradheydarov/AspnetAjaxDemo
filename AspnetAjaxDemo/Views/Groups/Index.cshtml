@model IEnumerable<AspnetAjaxDemo.Models.Group>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>

<select name="groupId" class="form-control">
    <option value>Select Group</option>
    @foreach (var item in Model)
    {
        <option value="@item.Id">@item.Name</option>
    }
</select>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Surname</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody class="students-list">

    </tbody>
    <p class="loader" style="display: none">Loading</p>
</table>

@section scripts{
    <script>

        $("select[name=groupId]").change(function () {

            var data_ = {
                groupId: $(this).find(":selected").val()
            }

            $.ajax({
                url: "/Groups/GetAllUsers",
                data: data_,
                dataType: "json",                
                success: function (data) {

                    $(".students-list").empty();

                    for (var i = 0; i < data.length; i++) {
                        var tr = $("<tr></tr>");

                        tr.append("<td>" + data[i].Name + "</td>")
                        tr.append("<td>" + data[i].Surname + "</td>")
                        tr.append("<td>" + data[i].Email + "</td>")

                        $(".students-list").append(tr);
                    }
                },
                error: function () {
                    alert("error")
                }
            })
        })

    </script>
}